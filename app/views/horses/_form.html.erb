<%= form_for(@horse) do |f| %>
  <% if @horse.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@horse.errors.count, "error") %> prohibited this horse from being saved:</h2>

      <ul>
      <% @horse.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :sex %><br>
    <%= f.radio_button :sex, "h" %>
    <%= f.label "Horse" %>
    <%= f.radio_button :sex, "m" %>
    <%= f.label "Mare" %><br>
  </div>
  <div class="field">
    <%= f.label :year %><br>
    <%= f.number_field :year %>
  </div>
  <div class="field">
    <%= f.label :sire %><br>
    <%= f.number_field :sire_id, :readonly => true %>
    <%= f.text_field :sire_name, 'data-autocompleteurl' => complete_sire_name_horses_path %>
  </div>
  <div class="field">
    <%= f.label :dam %><br>
    <%= f.number_field :dam_id %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
